package com.example.assignmenttracker;

import java.util.ArrayList;

import android.support.v7.app.ActionBarActivity;
import android.content.Intent;
import android.database.Cursor;
import android.database.sqlite.SQLiteDatabase;
import android.os.Bundle;
import android.view.ContextMenu;
import android.view.Menu;
import android.view.MenuInflater;
import android.view.MenuItem;
import android.view.View;
import android.widget.AdapterView.AdapterContextMenuInfo;
import android.widget.ArrayAdapter;
import android.widget.ListView;
import android.widget.Toast;

public class ShowCoursesActivity extends ActionBarActivity {

	int courseID;

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_show_semesters);

		ListView semListView = (ListView) findViewById(R.id.listView_show_semesters);
		registerForContextMenu(semListView);
		
		SQLiteDatabase db = MainActivity.db.getReadableDatabase();
		Cursor c = db.query("tbl_Course",
				new String[] { "CourseCode, CourseName" }, null, null, null,
				null, null);

		ArrayList<String> values = new ArrayList<String>();
		while (c.moveToNext()) {
			values.add(c.getString(0));
		}

		ArrayAdapter adapter = new ArrayAdapter(this,
				android.R.layout.simple_list_item_1, android.R.id.text1, values);
		semListView.setAdapter(adapter);
	}

	public void onListItemClick(ListView parent, View v, int position, long id) {
		Toast.makeText(this, "Your Choice : " + position, Toast.LENGTH_SHORT)
				.show();
	}

	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		// Inflate the menu; this adds items to the action bar if it is present.
		getMenuInflater().inflate(R.menu.show_courses, menu);
		return true;
	}
	
	public void onCreateContextMenu(ContextMenu menu, View v,
			ContextMenu.ContextMenuInfo menuInfo) {
		super.onCreateContextMenu(menu, v, menuInfo);
		MenuInflater inflater = this.getMenuInflater();
		inflater.inflate(R.menu.context_float_menu, menu);
	}

	@Override
	public boolean onOptionsItemSelected(MenuItem item) {
		// Handle action bar item clicks here. The action bar will
		// automatically handle clicks on the Home/Up button, so long
		// as you specify a parent activity in AndroidManifest.xml.
		/*
		 * // default code block int id = item.getItemId(); if (id ==
		 * R.id.action_settings) { return true; } return
		 * super.onOptionsItemSelected(item);
		 */
		AdapterContextMenuInfo info = (AdapterContextMenuInfo) item.getMenuInfo();
		
		String value = String.valueOf(item.getTitle());
		
//		if (info.id == 0){
//			Intent intent = new Intent(this, UpdateAssignmentActivity.class);
//			startActivity(intent);
//			return true;
//		} else if (info.id == 1){
//			MainActivity.db.deleteRecord("tbl_Course", "CourseCode",
//					String.valueOf(courseID));
//			this.recreate();
//			return true;
//		} else {
//			return super.onContextItemSelected(item);
//		}
		switch (item.getItemId()) {
		case R.id.context_menu_update:
			Intent intent = new Intent(this, MainActivity.class);
			//intent.putExtra("courseCode", value); // can you use this extra in
													// the update activity to
													// search for db record
													// containing this value?
			startActivity(intent);
			return true;
		case R.id.context_menu_delete:
			MainActivity.db.deleteRecord("tbl_Course", "CourseCode",
					String.valueOf(courseID));
			this.recreate();
			return true;
		default:
			return super.onContextItemSelected(item);
		}
	}
}
